<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="12dp"
      android:layout_marginStart="12dp"
      android:orientation="vertical">
  <TextView
      android:id="@+id/bundle_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical|start"
      tools:text="Winter is Coming"
      style="@style/Aptoide.TextView.Medium.L.BlackAlpha"
      />

    <TextView
        android:id="@+id/bundle_title_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        tools:text="Conquer the ultimate throne"
        style="@style/Aptoide.TextView.Regular.S.BlackAlpha"
        />

  </LinearLayout>

  <Button
      android:id="@+id/bundle_more"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end|center_vertical"
      android:text="@string/button_header_more"
      style="@style/Aptoide.Button.Flat"
      />
</FrameLayout>